# Database Configuration
POSTGRES_USER=langflow
POSTGRES_PASSWORD=parallax_secret_password
POSTGRES_DB=langflow

# Backend Configuration
# In Docker, host is 'postgres'. Locally, it might be 'localhost' if you run DB locally.
DATABASE_URL=postgresql://langflow:parallax_secret_password@postgres:5432/langflow
LANGFLOW_API_URL=http://langflow:7860

# Frontend Configuration
# The URL the browser uses to reach the backend.
# Locally: http://localhost:8000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# Langflow Configuration
LANGFLOW_DATABASE_URL=postgresql://langflow:parallax_secret_password@postgres:5432/langflow
LANGFLOW_AUTO_LOGIN=false
