# Database Configuration
POSTGRES_USER=parallax
POSTGRES_PASSWORD=localdev
POSTGRES_DB=parallax_ai

# Backend Configuration
# In Docker, host is 'postgres'. Locally, it might be 'localhost' if you run DB locally.
DATABASE_URL=postgresql+asyncpg://parallax:localdev@postgres:5432/parallax_ai
ANTHROPIC_API_KEY=sk-ant-api03-...
JWT_SECRET=your-256-bit-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:3000
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10

# Frontend Configuration
# The URL the browser uses to reach the backend.
# Locally: http://localhost:8000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000
